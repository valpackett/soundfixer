{
  "manifest_version": 2,
  "name": "SoundFixer",
  "author": "unrelenting.technology",
  "version": "1.1.0",
  "description": "Lets you fix annoying sound problems in YouTube videos and such. Like audio in one channel only, too quiet or too loud",
  "applications": {
    "gecko": {
      "id": "soundfixer@unrelenting.technology"
    }
  },
  "icons": {
    "96": "icon.svg",
    "48": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "webNavigation"
  ],
  "browser_action": {
    "default_icon": "icon.svg",
    "default_title": "SoundFixer",
    "default_popup": "popup.html",
    "theme_icons": [
      {
        "dark": "icon.svg",
        "light": "icon-inv.svg",
        "size": 48
      }
    ],
    "browser_style": true
  }
}
